{
    "name": "express-ts-boilerplate",
    "version": "1.0.0",
    "author": "rahmat",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development ts-node ./src/server.ts",
        "start": "cross-env NODE_ENV=production node ./build/server.js",
        "seed": "cross-env NODE_ENV=development ts-node ./scripts/seeder.ts",
        "clean": "rimraf ./build",
        "typeorm": "typeorm-ts-node-commonjs",
        "jwt:generate": "ts-node ./scripts/jwt-generate.ts",
        "build": "yarn clean && tsc",
        "build:debug": "yarn build --diagnostics",
        "lint": "eslint ./src",
        "lint:fix": "eslint ./src --fix",
        "migration:generate": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts GENERATE",
        "migration:create": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts CREATE",
        "migration:run": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts RUN",
        "migration:revert": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts REVERT",
        "migration:show": "cross-env NODE_ENV=development ts-node ./scripts/migrations.ts SHOW"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/morgan": "^1.9.5",
        "@types/winston": "^2.4.4",
        "@types/uuid": "^8.3.4",
        "@types/multer": "^1.4.7",
        "@types/body-parser": "^1.19.2",
        "@types/connect-timeout": "^0.0.36",
        "bcrypt": "^5.0.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-async-errors": "^3.1.1",
        "fs": "^0.0.1-security",
        "http-status-codes": "^2.2.0",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "body-parser": "^1.20.2",
        "luxon": "^3.0.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "ms": "^2.1.3",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.7",
        "connect-timeout": "^1.9.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/luxon": "^3.0.0",
        "@types/ms": "^0.7.31",
        "@types/node": "^18.6.4",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-import-resolver-typescript": "^3.4.0",
        "eslint-plugin-import": "^2.26.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    }
}
